{
  "name": "aura",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "nx run-many --target=dev --projects=mobile,web --parallel=2",
    "dev:mobile": "nx dev mobile",
    "dev:web": "nx dev web",
    "dev:all": "nx run-many --target=dev --all",
    "build": "nx run-many --target=build --all --exclude=mobile,crypto-core,auth,web,@aura/database-security",
    "build:all": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all --exclude=crypto-core,web",
    "test:all": "nx run-many --target=test --all",
    "e2e": "nx run-many --target=e2e --all",
    "lint": "nx run-many --target=lint --all",
    "type-check": "nx run-many --target=type-check --all --exclude=crypto-core",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "audit": "pnpm audit --audit-level=moderate",
    "audit:fix": "pnpm audit --fix",
    "test:services": "node scripts/test-service-integration.js"
  },
  "private": true,
  "devDependencies": {
    "@nx/eslint": "^21.4.1",
    "@nx/eslint-plugin": "^21.4.1",
    "@nx/expo": "^21.4.1",
    "@nx/js": "^21.4.1",
    "@nx/vite": "^21.4.1",
    "@nx/workspace": "^21.4.1",
    "@playwright/test": "^1.48.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/minimatch": "^6.0.0",
    "@types/node": "18.16.9",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "eslint": "^8.57.1",
    "husky": "^8.0.3",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.2",
    "nx": "^21.4.1",
    "playwright": "^1.48.0",
    "prettier": "^3.6.2",
    "typescript": "~5.3.3",
    "vitest": "^2.1.9"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "dependencies": {
    "@tamagui/animations-react-native": "^1.132.24",
    "@tamagui/button": "^1.132.24",
    "@tamagui/card": "^1.132.24",
    "@tamagui/config": "^1.132.24",
    "@tamagui/core": "^1.132.24",
    "@tamagui/progress": "^1.132.24",
    "@tamagui/separator": "^1.132.24",
    "@tamagui/text": "^1.132.24",
    "@typescript-eslint/project-service": "^8.42.0",
    "@typescript-eslint/tsconfig-utils": "^8.42.0",
    "expo-crypto": "^15.0.7",
    "expo-device": "^8.0.7",
    "expo-secure-store": "^15.0.7",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "recharts": "^3.2.0"
  },
  "pnpm": {
    "overrides": {
      "axios": ">=1.7.0",
      "esbuild": ">=0.25.0",
      "react": "19.1.0",
      "react-dom": "19.1.0",
      "react-native-renderer": "19.1.0",
      "@types/react": "19.1.10",
      "react-test-renderer": "19.1.0",
      "vite@<=5.4.19": ">=5.4.20",
      "axios@<1.12.0": ">=1.12.0",
      "@tamagui/button": "^1.132.24",
      "@tamagui/core": "^1.132.24",
      "@tamagui/text": "^1.132.24",
      "typescript": "~5.3.3",
      "@types/node": "^20.0.0",
      "@vitest/ui": "^2.1.9",
      "vitest": "^2.1.9"
    }
  }
}
